!!!
%html
  %head
    %title DAAD
    = stylesheet_link_tag    "application", media: "all" #, "data-turbolinks-track" => true
    = javascript_include_tag "application" #, "data-turbolinks-track" => true
    = csrf_meta_tags
    %script{src: "http://code.jquery.com/jquery.min.js", type: "text/javascript"}
    %script{src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyB60U-cs_Addv1qCRMC6OMs4ug8Ags8n-M&sensor=false", type: "text/javascript"}
    %link{href: "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css", rel: "stylesheet"}/
    / %script{src: "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"}
    

  %body
    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-danger= alert
    #nav
      =image_tag asset_path('AppaLogo.png'), :id => 'nav-img'
      #logo-name DISASTER ASSESSMENT AND ASSISTANCE DASHBOARD
      %ul#subnav
        %li 
          %input#main-search.search{placeholder: 'Search by Business, Address or County', type: 'text'}
          / .search 
          /   = link_to 'Advanved Search'
        %li#button
          %button#search
            =image_tag asset_path("search.png")
        %li.login
          %a(href='#') Prepare for a Disaster
        %li.login
          %a(href='#') Recovery Resources
        %li.login
          - if current_user
            = link_to current_user.email, '#edit', "data-toggle" => "modal", :remote => true, :id => 'login_form'
          - else
            = link_to "Login", "#login", "data-toggle" => "modal", :remote => true
        %li.login
          - if current_user
            = link_to "Logout", destroy_user_session_path, :method => :delete
          - else
            = link_to "Sign up", "#sign_up", "data-toggle" => "modal", :remote => true
        %li#advanced-search
          = link_to 'Advanved Search'
          / = link_to "SIGN-UP", new_user_registration_path, :remote => true #, "data-toggle" => "modal"
        

    = render "home/login_modal"
    = render "home/sign_up_modal"
    = render "home/edit_modal"

    #page-body
    
          
                   

      #map

      #container 
        =image_tag asset_path('x.png'), :id => 'close'
        Prepare for a Disaster


      %a(href='#')
        .map-buttons#neighbor Neighborhoods
      %a(href='#')
        .map-buttons#busi Businesses
      %a(href='#')
        .map-buttons#disaster Disaster Potential

      %a(href='#')
        .map-buttons#damage Damage
      %a(href='#')
        .map-buttons#hazard Hazardous Materials
      %a(href='#')
        .map-buttons#roads Roads

      %a(href='http://appallicious.com/')
        =image_tag asset_path("appalogo.jpg"), :id => 'appalogo'
        
      = yield
    


