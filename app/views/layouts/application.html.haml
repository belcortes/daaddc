!!!
%html
  %head
    %title DAAD
    = stylesheet_link_tag    "application", media: "all" #, "data-turbolinks-track" => true
    = javascript_include_tag "application" #, "data-turbolinks-track" => true
    = csrf_meta_tags
    %script{src: "http://code.jquery.com/jquery.min.js", type: "text/javascript"}
    %script{src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyB60U-cs_Addv1qCRMC6OMs4ug8Ags8n-M&sensor=false", type: "text/javascript"}
    %link{href: "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css", rel: "stylesheet"}/
    / %script{src: "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"}
    

  %body

    #nav
      =image_tag asset_path('seal.jpg'), :id => 'nav-img'
      #logo-name DISASTER ASSESSMENT AND ASSISTANCY DASHBOARD
      %ul#subnav
        %li 
          %input#main-search{placeholder: 'Search by Landlord, Address, Neighborhood or County', type: 'text'}
        %li#button
          =button_to 'Search', :id => 'search-button'
        %li.login
          %a(href='#') San Francisco Building Codes
        %li.login#login_form
          LOGIN
        %li.login
          = link_to "SIGN-UP", new_user_registration_path, :remote => true, "data-toggle" => "modal"

    #main{role: "dialog"}
    
          
                   

    #map
    %a(href='#')
      #violations All Violations Nearby
    = yield
    


