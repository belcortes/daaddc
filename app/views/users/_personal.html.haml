- if current_user
  %h3
    = current_user.name 
    's Account
  .height
    .personal#contact-info(href='#')
      Personal Information
      .account-box
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = f.label :name
          = f.text_field :name, value: current_user.name
          %br
          = f.label :email
          = f.email_field :email, value: current_user.email
          %br
          = f.label :zip
          = f.text_field :zip, value: current_user.zip
          %br
          = f.submit 'Update'
    %br
    .personal#certifications(href='#')
      Certifications
      .account-box
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { method: :put }) do |f|
          = f.check_box :cert, value: current_user.cert
          = f.label :cert
          %br
          - p current_user.nert
          - p current_user.cert
          = f.check_box :nert, value: current_user.nert
          = f.label :nert
          %br
          = f.check_box :gov_employee, value: current_user.gov_employee
          = f.label 'Government Employee'
          %br
          = f.label :organizations
          = f.text_field :organizations, value: current_user.organizations
          %br
          = f.submit 'Update'
    %br
    .personal#user-buildings(href='#')
      Skills
      .account-box
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = f.label :name
          = f.text_field :name
          = f.label :email
          = f.email_field :email
          = f.label :password
          = f.password_field :password
          = f.submit
    %br
    .personal#user-resources(href='#')
      Resources
      .account-box
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = f.label :name
          = f.text_field :name
          = f.label :email
          = f.email_field :email
          = f.label :password
          = f.password_field :password
          = f.submit